---
import "../styles/globals.css";
import Nav from "components/Nav.astro";
export interface Props {
  title?: string;
}

const { title = "Tyler Jones" } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="theme-color"
      content="#ffffff"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#000000"
      media="(prefers-color-scheme: dark)"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="flex flex-col gap-x-4 bg-white font-mono text-black selection:bg-green-500 selection:text-black dark:bg-black dark:text-purple-500 dark:selection:bg-purple-500 dark:selection:text-black md:flex-row md:items-center md:px-12"
  >
    <!-- Nav -->
    <Nav />
    <slot />
  </body>
</html>
