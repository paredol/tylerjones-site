---
import Nav from "components/Nav.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="flex flex-col md:flex-row md:items-center bg-white dark:bg-black text-black dark:text-[#FF00FF] dark:selection:bg-[#FF00FF] dark:selection:text-black font-mono"
  >
    <!-- Nav -->
    <Nav />
    <slot />
  </body>
</html>
<style is:global>
  * {
    box-sizing: border-box;
    /* outline: 1px solid #0091ff31; */
  }
  html,
  body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
  }
  main {
    height: 100%;
    width: 75%;
    display: flex;
    flex-direction: column;
  }
</style>
